{
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "ignoreChanges": ["__tests__/**", ".npmignore", "src/**", "yarn.lock"]
    },
    "version": {
      "exact": true,
      "allowBranch": "master"
    },
    "create": {
      "homepage": "https://github.com/SealUI/tc",
      "license": "MIT"
    }
  },
  "npmClient": "yarn",
  "version": "independent",
  "conventionalCommits": true,
  "changelog": {
    "repo": "sealui/tc",
    "labels": {
      "PR: New Feature": ":rocket: New Features",
      "PR: Breaking Change": ":boom: Breaking Changes",
      "PR: Bug Fix": ":bug: Bug Fix",
      "PR: Documentation": ":memo: Documentation",
      "PR: Internal": ":house: Internal",
      "PR: Underlying Tools": ":hammer: Underlying Tools"
    },
    "cacheDir": ".changelog"
  }
}
